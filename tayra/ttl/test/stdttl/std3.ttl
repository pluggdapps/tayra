!!! xhtml 1.0 strict ;

# import
@import bootstrap:templates/lib/tags.ttl as tags ;
  
$a = 100 * 100

<html>
  <head.etsite "http://www.w3.org/2005/10/profile">
    <link "${request.static_url('etsite:static/favicon.png')}" rel="icon" type="image/ico"/>
    ${self.hd_title()}
    ${self.hd_meta()}
    ${self.hd_links()}
    ${self.hd_styles()}
    ${self.hd_script()}
  <body class="etsite">
    ${self.bd_header()}
    ${self.bd_body()}
    ${self.bd_footer()}
  <script>

@function hd_title() :
  <title> ${title}

@function hd_metal() :
  
@function hd_links( a, b=10, c=90 ) :
  $cssfile = request.static_url('etsite:static/default.css')
  <link screen "${cssfile}" type="text/css" charset="utf-8" rel="stylesheet" />

@function hd_styles() :

@function hd_script() :
  $jqueryfile = request.static_url('etsite:static/jquery-1.5.1.min.js')
  $jqlibfile = request.static_url('etsite:static/jqlib.js')

  <script "${jqueryfile}" type="text/javascript"/>
  <script "${jqlibfile}" type="text/javascript"/>

@function bd_header() :
  $logofile = request.static_url('etsite:static/etlogo.png')
  <div#header>
    <div#caption>
      <ul#metanav>
        <li> ${tags.a( url_et_index, None, 'Home')}
        <li> ${tags.a( url_et_markup, None, 'Documentation')}
        <li> ${tags.a( url_et_readme, None, 'Development')}
        <li> ${tags.a( url_et_plugins, None, 'Plugins')}
      <div.fntitalic {float: right}>
        An extensible wiki processor, using parser grammar
    
    <a "${url_et_index}"> ${tags.img( logofile, "eazytext", id="logo" )}

@function bd_body() :
  <div#page>
    <div#leftpane> ${self.body_leftpane()}
    <div#contpane> ${self.body_contentpane()}

@function bd_footer() :
  <div#footer>
    An SKR Farms Initiative.
